<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hijaumuda"
    tools:context=".Activity2">

    <Button
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/kuning"
        android:text="Start"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        android:id="@+id/start"
        android:onClick="start"
        android:layout_marginTop="@dimen/_500sdp"
        android:layout_marginLeft="@dimen/_140sdp"
        />

    <TextView
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/_53sdp"
        android:textStyle="bold"
        android:text="Bersama Buku Jurnal, Satukan Cerita:"
        android:layout_marginTop="@dimen/_450sdp"/>

    <TextView
        android:layout_width="@dimen/_330sdp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/_45sdp"
        android:textStyle="bold"
        android:text="Anak-anak, Rayakan Ramadhan dengan Kreativitas!"
        android:layout_marginTop="@dimen/_470sdp"/>

    <TextView
        android:layout_width="@dimen/_350sdp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/_35sdp"
        android:textStyle="bold"
        android:textSize="@dimen/_25ssp"
        android:text="KidZone Ramadhan Tracker"
        android:layout_marginTop="@dimen/_410sdp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sholat"
        android:layout_marginTop="@dimen/_1sdp"
        />


</RelativeLayout>